{
  "name": "predecessor-tournament-management",
  "version": "1.0.0",
  "description": "A comprehensive tournament management system for Predecessor esports",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install-all": "npm install && npm run install-frontend && npm run install-backend",
    "install-frontend": "cd frontend && npm install",
    "install-backend": "cd backend && npm install",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm run dev",
    "dev": "npm run start",
    "dev:frontend": "npm run start:frontend",
    "dev:backend": "npm run start:backend",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:frontend": "cd frontend && npm test -- --watchAll=false",
    "test:backend": "cd backend && npm test",
    "test:watch": "cd backend && npm run test:watch",
    "setup:database": "cd backend && node scripts/setup-database.js",
    "setup:professional": "scripts/professional-setup-complete.bat",
    "validate": "node scripts/validate-setup.js",
    "switch-env": "scripts/switch-env.bat",
    "clean": "rimraf frontend/node_modules backend/node_modules node_modules",
    "reset": "npm run clean && npm run install-all"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "rimraf": "^4.1.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "author": "Predecessor Tournament Management Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sitting-in-a-towel/predecessor-tournament-system.git"
  },
  "keywords": [
    "predecessor",
    "tournament",
    "esports",
    "management",
    "discord",
    "draft",
    "bracket"
  ]
}